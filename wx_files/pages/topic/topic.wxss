.container_box{
  background: #F6F7FB;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  border: 0;
  margin:0 auto;
}
.container_item{
  width:100%;
  height:190rpx;
  background: #fff;
  border-radius:6rpx;
  margin-bottom: 10rpx;
}
.container_item_top{
  width:100%;
  height:50rpx;
}
.container_item_bottom{
  height: 100%;
  
}
.item_pic_box{
  height: 100%;
  width: 26%;
  display: inline-block;
  vertical-align: top;
}
.item_pic_box .image{
  height:150rpx;
  width:150rpx;
  margin:20rpx;
  background: #eee;
  border-radius:10rpx;
}
.item_pic_box .image image{
  height:100rpx;
  width:100rpx;
  margin:30rpx;
  border-radius:50%;
}
.item_info_box{
   height: 100%;
  width: 74%;
  display: inline-block;
}
.item_info_name{
  font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:bold;
color:rgba(51,51,51,1);
line-height:50rpx;
margin-top:20rpx;
width:100%;
white-space: nowrap;
overflow: hidden;
text-overflow:ellipsis;
}
.item_info_num{
  font-size:30rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(102,102,102,1);
line-height:50rpx;

}
.item_info_num text{
  width:80rpx;
}
.item_info_pri{
  font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:#333333;
line-height:50rpx;

}
.item_info_pri text{
  width:100rpx;
  color:rgba(227,29,43,1);
}